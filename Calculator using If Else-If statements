using System;

    namespace aCalculator {
        class Calculator {
            static void Main (string [] args) {
                
                int a;
                bool locker = false;
                
                while(true){
                Console.WriteLine("Choose the operation you want to use.");
                Console.WriteLine("1. Addition \n2. Subtraction \n3. Multiplication \n4. Division");
                a = Convert.ToInt32(Console.ReadLine());
                
                
                if (a == 1){
                    Console.WriteLine("Enter 1st number: ");
                    int add1 = Convert.ToInt32(Console.ReadLine());
                    Console.WriteLine("Enter 2nd number: ");
                    int add2 = Convert.ToInt32(Console.ReadLine());
                    
                    int sum = add1 + add2;
                    
                    Console.WriteLine("The answer is: "+sum);
                    break;
                }
                else if (a == 2){
                    Console.WriteLine("Enter 1st number: ");
                    int sub1 = Convert.ToInt32(Console.ReadLine());
                    Console.WriteLine("Enter 2nd number: ");
                    int sub2 = Convert.ToInt32(Console.ReadLine());
                    
                    int diff = sub1 - sub2;
                    
                    Console.WriteLine("The answer is: "+diff);
                    break;
                }
                else if (a == 3){
                    Console.WriteLine("Enter 1st number: ");
                    int mul1 = Convert.ToInt32(Console.ReadLine());
                    Console.WriteLine("Enter 2nd number: ");
                    int mul2 = Convert.ToInt32(Console.ReadLine());
                    
                    int prod = mul1 * mul2;
                    
                    Console.WriteLine("The answer is: "+prod);
                    break;
                }
                else if (a == 4){
                    Console.WriteLine("Enter 1st number: ");
                    int div1 = Convert.ToInt32(Console.ReadLine());
                    Console.WriteLine("Enter 2nd number: ");
                    int div2 = Convert.ToInt32(Console.ReadLine());
                    
                    int quo = div1 / div2;
                    
                    Console.WriteLine("The answer is: "+quo);
                    break;
                }
                else{
                    Console.WriteLine("Not a valid option.");
                }
                }
                
            }
        }
    }
